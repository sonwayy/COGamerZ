{% extends "./base.html.twig" %}

{% block body %}
    <div class="w-4/5 m-auto text-center">
        <div class="py-12 border-b border-gray-200">
            <h1 class="text-6xl pt-12 pb-8">
                Latest Plays of the week
            </h1>

        </div>
    </div>
    
    {% if app.user %}
        <div class="mx-auto w-4/5 my-8">
            <a 
                href="/post/create" 
                class="btn btn-primary">
                Create New post
            </a>
    </div>
    {% endif %}
    <div class="md:grid lg:grid-cols-3 gap-20 w-4/5 mx-auto py-15">
        <!-- Review Item -->
        {% for post in posts %}
            {% if(post.category == 'Play of the week') %}
                <div class="text-center pt-8 pb-4">
                    <img
                        src="{{ post.thumbnailPath }}"
                        alt=""
                        class="shadow-xl rounded-md"
                        style="width: 300px; height: 300px;"
                    />

                    <h2 class="text-gray-700 font-bold text-3xl py-2">
                        {{ post.title }}
                    </h2>

                    <span class="text-gray-500">
                        By <span class="italic text-sm text-gray-800">{{ post.userName }} | 28.01.2022
                    </span>
                    <p class="my-4"></p>
                    <a href="/post/{{ post.id }}" class="text border border-secondary text-white text-lg py-3 px-3 rounded bg-success">
                            Read More
                    </a>
                </div>
            {% endif %}
        {% endfor %}
        {% for video in videos %}
            {% if(video.category == 'Play of the week') %}
                <video controls>
                    <source src="{{ video.video }}" type="video/mp4">
                        Voici <a href="{{ video.video }}">un lien pour télécharger la vidéo</a>.</p>
                </video>

                    <h2 class="text-gray-700 font-bold text-3xl py-2">
                        {{ video.title }}
                    </h2>

                    <span class="text-gray-500">
                        By <span class="italic text-sm text-gray-800">{{ video.userName }} | 28.01.2022
                    </span>
                    <p class="my-4"></p>
                    <a href="/video/{{ video.id }}" class="text border border-secondary text-white text-lg py-3 px-3 rounded bg-success">
                            Read More
                    </a>
                </div>
            {% endif %}
        {% endfor %}
    </div>
{% endblock %}
